extends layout

block content
  .container
    .row.justify-content-center.align-items-center.loginForm.pt-3
      .col-md-4.col-md-offset-4
        h1.display-4.m-b-2 Sign Up
        form(method='POST' action='/signup')
          div.form-group
            label(for='fName') First Name
            input.form-control(type='text' id='fName' placeholder='John' name='fName')
          div.form-group
            label(for='lName') Last Name
            input.form-control(type='text' id='lName' placeholder='Doe' name='lName')
          div.form-group
            label(for='email') Email
            input.form-control(type='text' id='email' placeholder='email' name='email')
          div.form-group
            label(for='password') Password
            input.form-control(type='password' id='password' placeholder='pass' name='password')
          div.form-group
            label(for='confirm_Password') Confirm Password
            input.form-control(type='password' id='confirm_Password' placeholder='pass' name='confirm_Password')
          button.btn.btn-dark.ml-auto(type='submit') Sign Up.
