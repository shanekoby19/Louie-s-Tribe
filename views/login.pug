extends layout

block content
  .container
    .row.justify-content-center.align-items-center.loginForm.fullscreen
      .col-md-4.col-md-offset-4
        h1.display-4.m-b-2 Log In
        form(method='POST' action='/login')
          div.form-group
            label(for='email') Email
            input.form-control(type='text' id='email' placeholder='email' name='email')
          div.form-group
            label(for='password') Password
            input.form-control(type='password' id='password' placeholder='password' name='password')
          button.btn.btn-dark.ml-auto(type='submit') Log in 
